# Example terraform.tfvars for Clusterra Connect
#
# Copy this file to terraform.tfvars and fill in your values

# Required: AWS region where your ParallelCluster runs
region = "ap-south-1"

# Required: Name of your ParallelCluster (as shown in pcluster list-clusters)
cluster_name = "my-cluster"

# Required: VPC ID where your cluster runs
# Run: aws ec2 describe-vpcs --query 'Vpcs[*].VpcId'
vpc_id = "vpc-xxxxxxxxx"

# Required: Subnet ID where the head node runs
# Run: aws ec2 describe-instances --filters "Name=tag:parallelcluster:cluster-name,Values=YOUR_CLUSTER" --query 'Reservations[*].Instances[*].SubnetId'
subnet_id = "subnet-xxxxxxxxx"

# Optional: Name of your Slurm JWT secret in Secrets Manager
# Default: "slurm-jwt-key"
# slurm_jwt_secret_name = "slurm-jwt-key"

# Optional: Port where slurmrestd listens
# Default: 6820
# slurm_api_port = 6820
